@using company.ass.pl.ViewModels
@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}
<br />
<br />
<form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">
    

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].IsSelect" />
            <label asp-for="@Model[i].IsSelect">@Model[i].UserName</label>

        </div>
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />

    }
    <br />
    <input type="submit" value="Update"  class="btn btn-success"/>
    <a asp-action="Update" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>


</form>
