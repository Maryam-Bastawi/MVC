@model Departments
@{
    ViewData["Title"] = "update";
}

<h1>update Department</h1>
<br />
<br />

<div asp-validation-summary="All" class="btn-danger"></div>
<form asp-action="update">
    <div class="form-group">
        <label asp-for="code" class="col-form-label"></label>
        <input asp-for="code" type="number" class="form-control" />
        <span asp-validation-for="code" class="btn-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="name" class="col-form-label"></label>
        <input asp-for="name" type="text" class="form-control" />
        <span asp-validation-for="name" class="btn-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Dateofcreation" class="col-form-label"></label>
        <input asp-for="Dateofcreation" class="form-control" />
        <span asp-validation-for="Dateofcreation" class="btn-danger"></span>

    </div>
    <br />
    <br />
    <input type="submit" value="save" class="btn btn-primary" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
</form>